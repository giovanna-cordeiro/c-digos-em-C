#include <stdio.h>
void verificaParImpar(int num);
int main() {
	int numero;
	printf("Digite um número: ");
	scanf("%d", &numero);
	verificaParImpar(numero);
	return 0;
}
void verificaParImpar(int num) {
	int i=0;
	for(i=1; i<=num; i++){
		if (i % 2 == 0) {
			printf("%d é par.\n", i);
		} 
		else {
			printf("%d é ímpar.\n", i);
		}
	}
}
